{
  "manifest_version": 3,
  "name": "YouTube Manager",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Manage YouTube"
  }
}
